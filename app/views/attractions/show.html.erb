
<h1><%= @attraction.name %></h1>
<%if current_user.admin?%>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction)%>
<%else%>
  <%= form_tag rides_path do %>
  <%= hidden_field_tag "rides[attraction_id]", @attraction.id %>
  <%= hidden_field_tag "rides[user_id]", current_user.id %>
  <%= submit_tag "Go on this ride"%>
  <%end%>
<%end%>
